<h1>Editing recording</h1>

<% form_for(@recording) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :path %><br />
    <%= @recording.path %>
  </p>
  <p>
    <%= f.label :file %><br />
    <%= @recording.file %>
  </p>
  <p>
    <%= f.label :uploaded %><br />
    <%= @recording.uploaded_at %>
  </p>
  <p>
    <%= f.label :album %><br />
    <%= f.text_field :album %>
  </p>
  <p>
    <%= f.label :artist %><br />
    <%= f.text_field :artist %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :genre %><br />
    <%= f.text_field :genre %>
  </p>
  <p>
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </p>
  <p>
    <%= f.label :track_number %><br />
    <%= f.text_field :track %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @recording %> |
<%= link_to 'Back', recordings_path %>
